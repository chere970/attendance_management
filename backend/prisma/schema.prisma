generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum EmployeeStatus {
  CHECK_IN
  CHECK_OUT
}

model Employee {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  name        String?
  username    String
  email       String          @unique
  password    String
  role        String
  department  String
  photo       String
  fingerprint String
  status      EmployeeStatus? @default(CHECK_OUT)
}

model Attendance {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  employeeId String
  date       DateTime
  checkIn    DateTime
  checkOut   DateTime?
}

